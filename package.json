{
  "name": "mollie-react",
  "version": "1.0.0",
  "description": "A TypeScript React library for integrating Mollie payment components",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "node test-package.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "pack": "npm pack",
    "release": "./scripts/release.sh",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "keywords": [
    "mollie",
    "payment",
    "react",
    "typescript",
    "components",
    "payments",
    "credit-card",
    "iframe"
  ],
  "author": "",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mollie-react.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/mollie-react/issues"
  },
  "homepage": "https://github.com/your-username/mollie-react#readme",
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3"
  }
}
